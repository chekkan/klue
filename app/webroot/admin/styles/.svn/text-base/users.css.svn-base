div#users_header {
	background-color: #f5f5f5;
	font-weight: bold;
	padding: 0.4em;
	border-bottom: 1px solid #eee;
	text-transform: uppercase;
	font-size: 0.9em;
	color: #666;
}

div.users_row_odd {
	background-color: #fff;
	padding: 0.4em;
}

div.users_row_even {
	background-color: #f9f9f9;
	padding: 0.4em;
	border-top: 1px solid #eee;
	border-bottom: 1px solid #eee;
}

div.users_row_odd a, div.users_row_even a {
	color: #708ec6;
}

div#user_profile {
	background-color: #fafafa;
	border: 1px solid #ddd;
	padding: 1em;
	width: 60%;
	margin: 0 auto;
}

div#user_profile span.title {
	width: 38%;
	display: block;
	text-align: right;
	float: left;
	padding-right: 0.5em;
	border-right-style: inset;
	border-right-width: 1px;
	color: #aeaeb0;
	margin: 0.2em 0;
}
div#user_profile span.value, div#user_profile span.bold_value {
	width: 57%; 
	display: block;
	float: right;
	padding-left: 0.5em;
	margin: 0.2em 0;
}
div#user_profile div span.bold_value {
	font-weight: bold;
}